<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
    <h2>افزودن ویدیو</h2>
</div>
<form class="form-horizontal" action="/admin/episode/create?_csrf=<%= req.csrfToken() %>" method="post">
    <%- csrf_filed() %>

    <div class="form-group row">
        <div class="col">
            <label for="title" class="control-label font-weight-bold">عنوان ویدیو</label>
            <input type="text" class="form-control <% if (errors('title')){ %> is-invalid <% } %>" name="title"
                   id="title" placeholder="عنوان را وارد کنید"
                   value="<%- old('title') %>">
            <% if (errors('title')){ %>
                <span class="invalid-feedback"><%- errors('title') %> </span>
            <% } %>
        </div>

    </div>
    <div class="form-group row">
        <div class="col">
            <label for="type" class="control-label font-weight-bold font-weight-bold">نوع ویدیو</label>
            <select name="type" id="type" class="form-control  <% if (errors('type')){ %> is-invalid <% } %>">
                <option value="vip" <%- old('type') === 'vip' ? 'selected' : '' %> >اعضای ویژه</option>
                <option value="cash" <%- old('type') === 'cash' ? 'selected' : '' %> >نقدی</option>
                <option value="free" <%- old('type') === 'free' ? 'selected' : '' %> >رایگان</option>
            </select>
            <% if (errors('type')){ %>
                <span class="invalid-feedback"><%- errors('type') %> </span>
            <% } %>
        </div>
        <div class="col">
            <label for="time" class="control-label font-weight-bold">زمان دوره</label>
            <input type="text" class="form-control <% if (errors('time')){ %> is-invalid <% } %>" name="time"
                   id="time" placeholder="عنوان را وارد کنید"
                   value="<%- old('time') %>">
            <% if (errors('time')){ %>
                <span class="invalid-feedback"><%- errors('time') %> </span>
            <% } %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label for="body" class="control-label font-weight-bold">متن</label>
            <textarea rows="5" class="form-control <% if (errors('body')){ %> is-invalid <% } %>" name="body" id="body"
                      placeholder="متن مقاله را وارد کنید">
                <%- old('body') %>
            </textarea>
            <% if (errors('body')){ %>
                <span class="invalid-feedback"><%- errors('body') %> </span>
            <% } %>
        </div>
    </div>
    <div class="form-group font-weight-bold">
        <label for="course">دوره مربوطه</label>
        <select name="course" id="course" class="form-control">
            <% courses.forEach(course=>{ %>
                <option value="<%- course._id %>"
                        <%= String(old('course')) === String(course._id) ? 'selected' : '' %>
                >
                    <%- course.title %>
                </option>
            <% }); %>
        </select>
    </div>
    <div class="form-group row">
        <div class="col">
            <label for="videoUrl" class="control-label font-weight-bold">ادرس ویدیو</label>
            <input type="text" class="form-control text-md-left <% if (errors('videoUrl')){ %> is-invalid <% } %>"
                   name="videoUrl"
                   id="videoUrl" placeholder="ادرس ویدیو را وارد کنید"
                   value="<%- old('videoUrl') %>">
            <% if (errors('videoUrl')){ %>
                <span class="invalid-feedback"><%- errors('videoUrl') %> </span>
            <% } %>
        </div>
        <div class="col">
            <label for="number" class="control-label font-weight-bold">شماره جلسه</label>
            <input type="number" class="form-control <% if (errors('number')){ %> is-invalid <% } %>" name="number"
                   id="number"
                   value="<%- old('number') %>"
                   placeholder="شماره جلسه را وارد کنید" value="">
            <% if (errors('number')){ %>
                <span class="invalid-feedback"><%- errors('number') %> </span>
            <% } %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <button type="submit" class="btn btn-danger">ارسال</button>
        </div>
    </div>
</form>