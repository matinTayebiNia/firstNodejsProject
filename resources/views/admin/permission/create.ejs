<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
    <h2>افزودن دسترسی</h2>
</div>
<form class="form-horizontal" action="/admin/permission/create" method="post">
    <%- csrf_filed() %>

    <div class="form-group row">
        <div class="col">
            <label for="name" class="control-label font-weight-bold">عنوان دسترسی</label>
            <input type="text" class="form-control <% if (errors('name')){ %> is-invalid <% } %>" name="name"
                   id="name" placeholder="عنوان را وارد کنید"
                   value="<%= old('name') %>">
            <% if (errors('name')){ %>
                <span class="invalid-feedback"><%- errors('name') %> </span>
            <% } %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label for="label" class="control-label font-weight-bold">توضیحات دسترسی</label>
            <input type="text" class="form-control <% if (errors('label')){ %> is-invalid <% } %>" name="label"
                   id="label" placeholder="عنوان را وارد کنید"
                   value="<%= old('label') %>">
            <% if (errors('label')){ %>
                <span class="invalid-feedback"><%- errors('label') %> </span>
            <% } %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <button type="submit" class="btn btn-primary">ثبت</button>
        </div>
    </div>
</form>